{
  "name": "hardhat-soko",
  "version": "0.2.0",
  "description": "Hardhat plugin for managing released compilation artifacts",
  "author": "Lo√Øc Vincent-Genod",
  "license": "MIT",
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "lint": "eslint src",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "changeset": "changeset",
    "release": "npm run build && changeset publish"
  },
  "keywords": [
    "web3",
    "ethereum",
    "smart contracts",
    "hardhat",
    "plugin"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@eslint/js": "^9.8.0",
    "eslint": "^9.8.0",
    "globals": "^15.9.0",
    "prettier": "3.3.3",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.0",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "hardhat": "^2.22.7"
  }
}
